@model double?
@{

    int i = 0;
    for (i = 0; i < (int)Model; i++)
    {
        <i style="color:yellow" class="fas fa-star"></i>
    }
    if (Model - (int)Model > 0.49)
    {
        <i style="color:yellow" class="fas fa-star-half-alt"></i>
        i++;
    }
    for (; i < 5; i++)
    {
        <i style="color:yellow" class="far fa-star"></i>
    }
}