@model Web_Store.Models.Item


<div class="bg-fade"></div>
<div id="UserItem" class="user-form light-box" style="margin:-200px 0px 0px -25%;width:50%;padding:5px 10px;;position:fixed">
    <button class="btn btn-default" style="position:absolute;top:5px;right:5px" onclick="btnCloseView()"><i style="font-size:20px" class="fas fa-times"></i></button>
    <h4>Đánh Giá</h4>
    <hr style="clear:both" />
    <div class="container">
        <p>Sách <b>@Model.Name</b></p>
        <div class="row">
            <div class="col-md-3">
                <label>Điểm:</label>
                <input id="Rate" name="Rate" type="number" step="0.25" class="" value="@ViewBag.Rate"/>
            </div>
            <div class="col-md-9">
                <label>Lời Bình:</label>
                <input  id="Comment" name="Comment"  type="text" value="@ViewBag.Comment"/>
            </div>
        </div>
        <p style="float:right">- bởi <b>@HttpContext.Current.User.Identity.Name</b></p>
    </div>
    <button class="btn btn-success" style="width:100%" onclick="btnSendRate(@Model.ItemId)">Lưu</button>
</div>
