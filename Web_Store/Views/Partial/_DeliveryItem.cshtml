@model Web_Store.Models.Delivery


<div id="@(Model.ItemId)ItemBag" class="card" style="width:100%;height:70px;">
    <div class="card-horizontal">
        <div>
            <img src="@Model.Item.ImagePath" style="width:50px;height:70px;">
        </div>
        <div class="card-body" style="padding:5px;">
            <div>
                <div class="short-text" style="float:left"><b style=" overflow: hidden; text-overflow: ellipsis; white-space: nowrap; width:300px">@Model.Item.Name</b></div>
                ( Giá: @(Convert.ToInt32(Model.Price))đ )
                <button class="btn btn-danger" style="float:right;" onclick="resetItem(@Model.ItemId,0)">Xoá</button>
            </div>
            <div>
                SL: <input id="Quantity" name="Quantity" type="number" value="@Model.Quantity" style="width:50px;padding:0px 5px;margin:0px;border:0px;background-color:#9ce9f0" onblur="resetItem(@Model.ItemId,this.value)" />
                = @(Convert.ToInt32(Model.Price*Model.Quantity))đ
            </div>
        </div>
    </div>
</div>
