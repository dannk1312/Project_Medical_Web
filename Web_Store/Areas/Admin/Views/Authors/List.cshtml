@model PagedList.IPagedList<Web_Store.Models.Author>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<div>
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("List","Authors")'"><h2>Author</h2></button>
</div>

<div>
    <h3 style="float:left">List</h3>
    <button style="float:right" type="button" class="btn btn-success" onclick="location.href='@Url.Action("Create","Authors")'">
        Author <i class="fa fa-plus" aria-hidden="true"></i>
    </button>
</div>

<table class="table">
    <tr>
        <th>
            Tác Giả
        </th>
        <th>
            Vật Phẩm
        </th>
        <th>
            Phương Thức
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td style="width:60%">
                    @foreach (var run in item.Items)
                    {
                        <button class="btn btn-danger" style="padding:1px 2px;margin:1px;" type="button" onclick="location.href='@Url.Action("Edit","Items", new { id=run.ItemId })'">@run.Name</button>
                    }
            </td>
            <td style="width:120px">
                <button style="float:left" type="button" class="btn btn-warning btn-thin" onclick="location.href='@Url.Action("Edit","Authors", new { id=item.AuthorId })'">
                    <i class="fa fa-edit" aria-hidden="true"></i>
                </button>
                <button style="float:left" type="button" class="btn btn-info btn-thin" onclick="location.href='@Url.Action("Details","Authors", new { id=item.AuthorId })'">
                    <i class="fa fa-info" aria-hidden="true"></i>
                </button>
                @*<button style="float:left" type="button" class="btn btn-danger btn-thin" onclick="Delete('@item.AuthorId','Authors')">
                        Delete <i class="fa fa-ban" aria-hidden="true"></i>
                    </button>*@
            </td>
        </tr>
    }

</table>

Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("List", new { page }))