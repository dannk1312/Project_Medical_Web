@model Web_Store.Models.News

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<div class="user-form" style="width:80%">
    <div>
        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("List","News")'"><h2>News</h2></button>
        <button type="button" class="btn btn-warning" style="pointer-events:none">
            <i class="fa fa-edit" aria-hidden="true"></i>
        </button>
    </div>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>News</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.NewsId)
            @Html.HiddenFor(model => model.Username)
            @Html.HiddenFor(model => model.NewsId)
            @Html.HiddenFor(model => model.Date)
            @Html.HiddenFor(model => model.DiscussId)

            <div class="row">
                <div class="form-group col-md-12">
                    @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label " })
                    <div>
                        @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-12">
                    @Html.LabelFor(model => model.isPublic, htmlAttributes: new { @class = "control-label " })
                    <div class="checkbox">
                        @Html.DropDownList("isPublic", new SelectList(
                            new List<SelectListItem>
                            {
                                new SelectListItem { Selected = true, Text = "Cộng Đồng", Value = "true"},
                                new SelectListItem { Selected = false, Text = "Cá Nhân", Value = "false"},
                            }, "Value", "Text", 1), htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.isPublic, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-12">
                    <button type="submit" class="btn btn-warning" style="width:100%">Edit</button>
                </div>
            </div>
        </div>
    }
</div>
