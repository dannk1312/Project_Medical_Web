
@{
    ViewBag.Title = "Thống Kê";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<script type="text/javascript">
    window.onload = function () {
        var chart = new CanvasJS.Chart("chartContainer", {
            animationEnabled: true,
            title: {
                text: "Earn&Paid Chart"
            },
            axisY: {
                title: "Money",
                includeZero: true
            },
            legend: {
                cursor: "pointer",
                itemclick: toggleDataSeries
            },
            toolTip: {
                shared: true,
                content: toolTipFormatter
            },
            data: [{
                type: "bar",
                showInLegend: true,
                name: "Earn",
                color: "green",
                dataPoints: [
                    @for (int i= 1;i <= 12;i++)
                    {
                        @:{ y: @ViewBag.cEarn[i], label: "@ViewBag.Month[i]" },
                    }
                ]
            },
            {
                type: "bar",
                showInLegend: true,
                name: "Paid",
                color: "gold",
                dataPoints: [
                    @for (int i= 1;i <= 12;i++)
                    {
                        @:{ y: -@ViewBag.cPaid[i], label: "@ViewBag.Month[i]" },
                    }
                ]
            }]
        });
        chart.render();

        var chart2 = new CanvasJS.Chart("chartContainerTotal", {
        animationEnabled: true,
        title: {
                text: "Total Chart"
            },
            axisY: {
                title: "Money",
                includeZero: true
            },
            legend: {
                cursor: "pointer",
                itemclick: toggleDataSeries
            },
            toolTip: {
                shared: true,
                content: toolTipFormatter
            },
            data: [{
                type: "bar",
                showInLegend: true,
                name: "Earn",
                color: "blue",
                dataPoints: [
                    @for (int i= 1;i <= 12;i++)
                    {
                        @:{ y: @(ViewBag.cEarn[i]-ViewBag.cPaid[i]), label: "@ViewBag.Month[i]" },
                    }
                ]
            }],
        });
        chart2.render();

        function toolTipFormatter(e) {
            var str = "";
            var total = 0;
            var str3;
            var str2;
            for (var i = 0; i < e.entries.length; i++) {
                var str1 = "<span style= \"color:" + e.entries[i].dataSeries.color + "\">" + e.entries[i].dataSeries.name + "</span>: <strong>" + e.entries[i].dataPoint.y + "</strong> <br/>";
                total = e.entries[i].dataPoint.y + total;
                str = str.concat(str1);
            }
            str2 = "<strong>" + e.entries[0].dataPoint.label + "</strong> <br/>";
            str3 = "<span style = \"color:Tomato\">Total: </span><strong>" + total + "</strong><br/>";
            return (str2.concat(str)).concat(str3);
        }

        function toggleDataSeries(e) {
            if (typeof (e.dataSeries.visible) === "undefined" || e.dataSeries.visible) {
                e.dataSeries.visible = false;
            }
            else {
                e.dataSeries.visible = true;
            }
            chart.render();
        }

    }
</script>

<div style="overflow-x: none !important;">
    <h4><b>Dashboard</b></h4>

    <div class="row" style="padding:10px">
        <div class="col-md-3">
            Quantity of user: <b>@ViewBag.qUser</b>
        </div>
        <div class="col-md-3">
            Quantity of item(storage): <b>@ViewBag.qItem</b>
        </div>
        <div class="col-md-3">
            Quantity of item( sold ): <b>@ViewBag.sItem</b>
        </div>
    </div>
    <div class="row" style="padding:10px">
        <div class="col-md-3">
            Money paid:  <b>-@Convert.ToInt32(ViewBag.mPaid) vnđ</b>
        </div>
        <div class="col-md-3">
            Money earn:  <b>@Convert.ToInt32(ViewBag.mEarn) vnđ</b>
        </div>
        <div class="col-md-3">
            Total:  <b>@Convert.ToInt32(ViewBag.mEarn - ViewBag.mPaid) vnđ</b>
        </div>
    </div>

    <div style=" width: 90%;">
        <form method="post" style="width: 200px;float:right">
            <label>Year: </label>
            <input style="width:150px" id="year" name="year" type="number" value="@ViewBag.Year" onblur="this.form.submit()" />
        </form>
        <hr style="clear:both" />
        <div id="chartContainer" style="height: 370px;"></div>
        <hr />
        <div id="chartContainerTotal" style="height: 370px;"></div>
    </div>
</div>

<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>